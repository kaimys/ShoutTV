TICKER_HEIGHT_FACTOR = 0.15;

#ticker {
  bottom: 0;
  position: absolute;
  height: TICKER_HEIGHT_FACTOR * DEVICE_HEIGHT;
  width: 100%;

  > .logo {
        
    background-image: url("../img/logo_farbe.png");
    height: 50px;
    width: 50px;
    background-size: cover;
    position: absolute;
    right: 0;
    top: 0;
  }

  > .elements {
    height: 100%;

    > .stream {
      font-size: 15px;
      display: block;
      width: 300px;
      height: 100%;
      float: left;
      padding: 10px;
      background-color: BACKGROUND_COLOR;

      -webkit-transition: all 0.5s ease-out;
      -moz-transition: all 0.5s ease-out;
      -o-transition: all 0.5s ease-out;
      -ms-transition: all 0.5s ease-out;
      transition: all 0.5s ease-out;

      > .user > .image {
        height: 1em;
        width: 1em;
        background-size: cover;
        float: left;
        margin: 5px;
      }

      > .text {
        
      }
    }

  }

}